@model IEnumerable<proje1.Models.ProjectEntities1>

@{
    ViewBag.Title = "Zoo Management Database";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color: rgb(175, 174, 181);
            background-position: center;
            background-blend-mode: overlay;
        }

        .header {
            background-color: #1d5c1e;
            color: white;
            padding: 15px;
            text-align: center;
            position: relative;
        }

            .header .logout {
                position: absolute;
                right: 20px;
                top: 15px;
            }

                .header .logout a {
                    color: white;
                    text-decoration: none;
                    padding: 10px 15px;
                    background-color: #ff5c5c;
                    border-radius: 5px;
                    transition: background-color 0.3s ease-in-out;
                }

                    .header .logout a:hover {
                        background-color: #e04b4b;
                    }

        .navbar {
            background-color: #333;
            color: white;
            padding: 10px;
            text-align: center;
            overflow: hidden;
        }

            .navbar a {
                padding: 10px 15px;
                text-decoration: none;
                color: white;
                margin: 0 5px;
                border-radius: 5px;
                transition: background-color 0.3s ease-in-out;
            }

                .navbar a:hover {
                    background-color: #575757;
                }

        .content {
            padding: 20px;
            text-align: center;
        }

            .content h2 {
                font-size: 60px;
                color: white;
            }

            .content p {
                font-size: 30px;
                color: white;
            }
    </style>
</head>
<body>
    <div class="header">
        <h1>Zoo Management Database</h1>
        <div class="logout">
            <a href="@Url.Action("Login", "Home")">Log Out</a>
        </div>
    </div>
    <div class="navbar">
        <a href="@Url.Action("Index", "Home")">Homepage</a>
        <a href="@Url.Action("Index", "Animals")">Animals</a>
        <a href="@Url.Action("Index", "AnimalTypes")">Animal Types</a>
        <a href="@Url.Action("Index", "Enclosures")">Enclosures</a>
        <a href="@Url.Action("Index", "Caretakers")">Caretakers</a>
        <a href="@Url.Action("Index", "Caretakers_Teams")">Caretaker Teams</a>
        <a href="@Url.Action("Index", "Enclousers")">Visiting Hours</a>
    </div>

    <div class="content">
        <h2>Homepage</h2>
        <p>Welcome to the zoo management panel!</p>
        <p>You can perform your transactions by going to the relevant section in the menu.</p>
    </div>
</body>
</html>
